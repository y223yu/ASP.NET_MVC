@model IEnumerable<YYSail.Models.MembershipType>

@{
    ViewData["Title"] = "List of Membership Types"; /*Change the title*/
}

<h2>List of Membership Types</h2> @*Change the heading*@

<p>
    <a asp-action="Create">Create a New Membership Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name @*display "Name" instead of "MembershipTypeName"*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatioToFull)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MembershipTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RatioToFull)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MembershipTypeName">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MembershipTypeName">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MembershipTypeName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
