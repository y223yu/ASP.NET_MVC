@model YYSail.Models.BoatType

@{
    ViewData["Title"] = "Edit a Boat Type";/*Change the title*/
}

<h2>Edit a Boat Type</h2>@*Change the heading*@

<h4>Boat Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BoatTypeId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @*Start: Use <textarea> to replace <input>*@
                <textarea class="form-control text-box multi-line" id="Description" name="Description" rows="5">@Model.Description</textarea>
                @*@Html.TextAreaFor(model => model.Description, new { @rows = "2", @cols = "48" })*@
                <span asp-validation-for="Description" class="text-danger"></span>
                <!--End-->
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Chargeable" /> @Html.DisplayNameFor(model => model.Chargeable)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Sail" /> @Html.DisplayNameFor(model => model.Sail)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
